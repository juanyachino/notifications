<!DOCTYPE>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Notification - Iniciar Secion</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="assets/fonts/ionicons.min.css">
    <link rel="stylesheet" href="assets/css/Login-Form-Clean.css">
</head>

<body>
    <% if @error %>
      <div class="alert alert-danger" role="alert">
        <%= @error%>
      </div>
    <% end %>
  
    <div class="login-clean" style="background-color: #ffffff;">
        <form action="/admin" method="post">
          <div class="illustration"><i class="icon ion-ios-paperplane-outline"></i></div>
          <div class="form-group"><input class="form-control" type="username" placeholder="Ingrese nombre usuario" name="username" required></div>
          <div class="form-group"><input class="form-control" type="text" placeholder="Ingrese el codigo" name="text" required></div>
          <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Enviar</button></div>
        </form>
    </div>
    <% if @success %>
      <p class="success"><%= @success %> </p>
    <% end %>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
